{
  "name": "gphotos-takeout-repair",
  "version": "2.0.0",
  "description": "Organize a Google Photos export (created with Takeout) into a useful directory of files.",
  "repository": "AlecRust/gphotos-takeout-repair",
  "author": "Alec Rust <me@alecrust.com>",
  "type": "module",
  "license": "MIT",
  "exports": "./src/index.js",
  "bin": {
    "gphotos-takeout-repair": "src/index.js"
  },
  "files": [
    "src/index.js"
  ],
  "keywords": [
    "google-photos",
    "takeout",
    "exif",
    "export"
  ],
  "packageManager": "npm@11.7.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "vitest run",
    "lint": "npm run check",
    "format": "npm run check",
    "check": "biome check --write .",
    "prepare": "husky",
    "release": "release-it --ci"
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mock-fs": "^5.5.0",
    "release-it": "^19.2.2",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
  }
}
