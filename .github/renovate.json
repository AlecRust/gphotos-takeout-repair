{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:quarterly",
    "group:allNonMajor",
    "customManagers:biomeVersions",
    ":automergeMinor",
    ":disableDependencyDashboard"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["engines"],
      "matchPackageNames": ["node"],
      "allowedVersions": "20.x"
    }
  ],
  "rangeStrategy": "bump"
}
